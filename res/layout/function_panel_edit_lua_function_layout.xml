<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Screen Design for the SONGS -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/function_panel_edit_lua_function_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save" />

        <Button
            android:id="@+id/function_panel_edit_lua_function_abort_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abort" />
    </LinearLayout>

    <TextView
        android:id="@+id/function_panel_edit_lua_function_equation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Function Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/function_panel_edit_lua_function_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/function_panel_edit_lua_function_code"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.46"
        android:scrollbars = "horizontal"
        android:scrollHorizontally="true"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="..." />

</LinearLayout>