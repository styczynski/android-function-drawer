<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:orientation="vertical"
    android:layout_width="fill_parent">

    <TableRow android:layout_width="fill_parent"
              android:id="@+id/TableRow01"
              android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/function_panel_tablerow_colorview"
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <android.webkit.WebView
            android:id="@+id/id"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/function_panel_tablerow_removebutton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginRight="-25dp"
            android:layout_marginTop="5dp"
            android:src="@android:drawable/btn_star" />

        <ImageButton
            android:id="@+id/function_panel_tablerow_propsbutton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:src="@android:drawable/btn_star" />

    </TableRow>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/function_panel_tablerow_varvalue_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/function_panel_tablerow_varvalue_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageButton
            android:id="@+id/function_panel_tablerow_playbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@android:drawable/btn_star" />

    </RelativeLayout>

    <SeekBar
        android:id="@+id/function_panel_tablerow_varvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</TableLayout>